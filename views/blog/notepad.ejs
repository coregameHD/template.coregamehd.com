<%- include('../partials/head', { title:"Simple Markdown Notepad", cssFile:"blog" }) %>
<!-- SimpleMDE Markdown Editor CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css">
<%- include('../partials/navbar_blog') %>
<body>
    <div class="page-wrapper flex-grow-1" style="padding-top: 5rem;">
        <div class="container-xl">
            <div class="row justify-content-center">
                <!-- Single Column Editor -->
                <div class="col-lg-10 col-xl-8">
                    <!-- Title Card -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3 class="card-title">Title</h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <input type="text" id="title" class="form-control" placeholder="Enter title here...">
                            </div>
                        </div>
                    </div>

                    <!-- Content Card -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h3 class="card-title m-0">Content</h3>
                            <a href="https://www.markdownguide.org/basic-syntax/" target="_blank" class="btn btn-ghost-secondary btn-sm" title="Markdown Guide">
                                <i class="fab fa-markdown me-2"></i>
                                Markdown Guide
                            </a>
                        </div>
                        <div class="card-body p-0">
                            <textarea
                                id="content"
                                class="form-control border-0"
                                style="min-height: 60vh; resize: none; font-size: 22px;"
                                spellcheck="false"
                            ></textarea>
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <button id="clearAllBtn" class="btn btn-outline-danger">
                                    <i class="fas fa-trash me-2"></i>Clear All
                                </button>
                                <div>
                                    <button id="pasteContentBtn" class="btn btn-outline-primary me-2">
                                        <i class="fas fa-paste me-2"></i>Paste
                                    </button>
                                    <button class="btn btn-primary" id="saveNoteBtn">
                                        <i class="fas fa-save me-2"></i>Save Note
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
    
    <!-- SimpleMDE Markdown Editor JS -->
    <script src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const titleInput = document.getElementById('title');
            const contentTextarea = document.getElementById('content');
            const clearAllBtn = document.getElementById('clearAllBtn');
            const pasteContentBtn = document.getElementById('pasteContentBtn');
            const saveNoteBtn = document.getElementById('saveNoteBtn');

            // Initialize SimpleMDE
            const easyMDE = new EasyMDE({
                element: contentTextarea,
                spellChecker: false,
                status: false,
                autofocus: true,
                placeholder: 'Start writing your Markdown content here...',
                toolbar: [
                    'bold', 'italic', 'heading', '|',
                    'quote', 'unordered-list', 'ordered-list', '|',
                    'link', 'image', 'code', '|',
                    'preview', 'side-by-side', 'fullscreen', '|',
                    'guide'
                ],
                minHeight: '60vh',
                forceSync: true
            });

            // Update the textarea value when saving
            const updateTextareaValue = () => {
                contentTextarea.value = easyMDE.value();
            };

            // Clear all content
            clearAllBtn.addEventListener('click', () => {
                if (confirm('Are you sure you want to clear all content?')) {
                    titleInput.value = '';
                    easyMDE.value('');
                    localStorage.removeItem('savedNote');
                }
            });

            // Paste content from clipboard
            pasteContentBtn.addEventListener('click', async () => {
                try {
                    const text = await navigator.clipboard.readText();
                    const cursorPosition = easyMDE.codemirror.getCursor();
                    easyMDE.codemirror.replaceRange(text, cursorPosition);
                } catch (err) {
                    console.error('Failed to paste:', err);
                    alert('Failed to paste content. Please make sure to allow clipboard access.');
                }
            });

            // Save note to localStorage
            saveNoteBtn.addEventListener('click', () => {
                updateTextareaValue();
                const note = {
                    title: titleInput.value,
                    content: contentTextarea.value,
                    lastSaved: new Date().toISOString()
                };
                localStorage.setItem('savedNote', JSON.stringify(note));
                alert('Note saved successfully!');
            });

            // Load saved note if exists
            const savedNote = localStorage.getItem('savedNote');
            if (savedNote) {
                const note = JSON.parse(savedNote);
                titleInput.value = note.title || '';
                easyMDE.value(note.content || '');
            }

            // Handle window resize to adjust editor height
            function adjustEditorHeight() {
                const editor = document.querySelector('.CodeMirror');
                if (editor) {
                    editor.style.height = '60vh';
                    easyMDE.codemirror.refresh();
                }
            }

            window.addEventListener('resize', adjustEditorHeight);
            adjustEditorHeight();
        });
    </script>
</body>
</html>